<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<% @article.order('created_at').reverse_order.each do |article| %>
  <h3><%= link_to article.title, article_path(id: article.id) %></h3>
  <% article.categories.each do |category| %>
    <p><%= category.name %></p>
  <% end %>
  <img src="<%= article.image %>" width="150px">
<% end %>
