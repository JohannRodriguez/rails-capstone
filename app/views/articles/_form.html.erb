<!DOCTYPE html>
<html>
  <body>
    <% flash.each do |type, msg| %>
      <div class="flash_message">
        <%= msg %>
      </div>
    <% end %>
    <%= form_for @article do |f| %>
    Title: <%= f.text_field :title %>
    Body: <%= f.text_field :text %>
    Image url: <%= f.text_field :image %>
    <%= f.submit %>
    <% end %>
  </body>
</html>
