<!DOCTYPE html>
<html lang="en" dir="ltr">
  <body>
    <% flash.each do |type, msg| %>
    <div class="flash_message">
      <%= msg %>
    </div>
    <% end %>
    <div class="login_form">
      <%= form_for :session, url: sessions_path() do |f| %>
      User name: <%= f.text_field :name, placeholder: 'Username' %>
      <%= f.submit "Login" %>
      <% end %>
    </div>
  </body>
</html>
