<!DOCTYPE html>
<html>
  <body>
    <div class="category_show_section columns is-multiline is-gapless">
      <% @categories.each do |category| %>
        <article class="category_show column is-half">
          <a href="<%= category_path(id: category.id) %>">
            <div class="category_show_titles">
              <h2><%= category.name %></h2>
              <p><%= latest_category_article_title(category) %></p>
            </div>
            <div class="category_show_img_author">
              <img src="<%= latest_category_article_image(category) %>" width="150px" onerror="this.onerror=null; this.src='https://farm5.staticflickr.com/4363/36346283311_1dec5bb2c2.jpg'">
              <p><%= latest_category_article_name(category) %></p>
            </div>
          </a>
        </article>
      <% end %>
    </div>
  </body>
</html>
