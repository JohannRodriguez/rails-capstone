<% @user.saved_articles.order(:created_at).reverse_order.each do |article_record| %>
  <img src="<%= saved_article_image(article_record) %>" width="150px" onerror="this.onerror=null; this.src='https://farm5.staticflickr.com/4363/36346283311_1dec5bb2c2.jpg'">
  <p><%= saved_article_title(article_record) %></p>
  <p>Saved at: <%= article_record.created_at.strftime("%Y-%m-%d") %></p>
  <p><%= link_to 'Delete article', save_article_path(id: article_record.id), method: :delete %></p>
<% end %>
