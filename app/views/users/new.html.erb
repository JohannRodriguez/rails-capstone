<!DOCTYPE html>
<html>
  <body>
    <% flash.each do |type, msg| %>
    <div class="flash_message">
      <%= msg %>
    </div>
    <% end %>
    <%= form_for @user do |f| %>
    User name: <%= f.text_field :name, placeholder: 'Create username' %>
    <%= f.submit %>
    <% end %>
    <%= link_to 'Sign In', new_session_path %>
  </body>
</html>
